#!/usr/bin/env bash

if [[ $# -eq 0 || $# -gt 2 ]]; then
	echo "Usage $0 pubkey.file some@host"
	exit 1
elif [[ $# -eq 2 ]]; then
	$key="$1"
	$host="$2"
elif [[ $# -eq 1 ]]; then
	$key="~/.ssh/id_rsa.pub"
	$host="$1"
fi

if [ -f $key ]; then
	cat $key | ssh $host "mkdir -p ~/.ssh; cat - >> ~/.ssh/authorized_keys; chmod 0700 ~/.ssh; chmod 0600 ~/.ssh/authorized_keys"
fi
