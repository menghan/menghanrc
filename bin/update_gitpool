#!/usr/bin/env bash

code="$HOME/codespace"

for p in $(ls $code)
do
	cd "$code/$p" > /dev/null 2>&1
	if ! test $?; then
		continue
	fi
	if ! ls .git > /dev/null 2>&1; then
		continue
	fi
	if git br -a | grep -q trunk; then
		git svn fetch
	else
		git remote update origin 2>/dev/null | sed '1d'
	fi
done
