#!/usr/bin/env python

import sys
import json


class EncWriteWrapper(object):

    def __init__(self, wrapped, encoding='utf-8'):
        self.wrapped = wrapped
        self.encoding = encoding

    def write(self, s):
        if isinstance(s, unicode):
            s = s.encode(self.encoding)
        self.wrapped.write(s)


def main():
    fi, fo = (sys.argv[1:] + [None, None])[:2]
    fi = open(fi, 'rb') if fi else sys.stdin
    fo = open(fo, 'wb') if fo else sys.stdout
    s = fi.read()
    try:
        obj = json.loads(s)
    except ValueError:
        fo.write(s)
        return
    try:
        json.dump(obj, EncWriteWrapper(fo), sort_keys=True,
                  indent=4, separators=(',', ': '), ensure_ascii=False)
        fo.write('\n')
    except IOError as e:
        if e.strerror == 'Broken pipe':
            return
        raise


if __name__ == '__main__':
    main()
