#!/usr/bin/env bash

gitpool_rootdir=

while getopts 'd:' OPTION
do
	case $OPTION in
		d)
			gitpool_rootdir="$OPTARG"
			;;
	esac
done

if [ -z "$gitpool_rootdir" -o ! -d "$gitpool_rootdir" ]; then
	exit 1
fi
cd $gitpool_rootdir || exit 1
for p in $(ls)
do
	if ! cd $p &>/dev/null; then
		continue
	fi
	if [ -d .git ]; then
		git remote update 2>/dev/null | sed '1d'
	elif [ -d .hg ]; then
		hg update
	fi
	cd ..
done
