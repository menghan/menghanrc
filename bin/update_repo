#!/usr/bin/env bash

repo_rootdir=

while getopts 'd:' OPTION
do
	case $OPTION in
		d)
			repo_rootdir="$OPTARG"
			;;
	esac
done

if [ -z "$repo_rootdir" -o ! -d "$repo_rootdir" ]; then
	exit 1
fi
cd $repo_rootdir || exit 1
for p in $(ls)
do
	if ! cd $p &>/dev/null; then
		continue
	fi
	if [ -d .git ]; then
		if [ -d .git/svn ]; then
			git svn fetch
		else
			git remote update 2>/dev/null | sed '1d'
		fi
	elif [ -d .hg ]; then
		hg update
	elif [ -d .svn ]; then
		svn update | grep -v 'At revision'
	fi
	cd ..
done
