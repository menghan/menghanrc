#!/usr/bin/env python
# coding=utf-8

""" reference: http://dola.xinfan.org/?p=282 """

import os
import sys
import zipfile


if __name__ == '__main__':
    if len(sys.argv) < 2:
        print 'python %s zipfilename' % sys.argv[0]
    else:
        with zipfile.ZipFile(sys.argv[1]) as zf:
            nlist = zf.namelist()
            for n in sorted(nlist):
                try:
                    m = unicode(n, 'gbk').encode('utf8')
                except:
                    m = n
                if m.endswith('/'):
                    os.makedirs(m)
                else:
                    with open(m, 'wb') as f:
                        f.write(zf.read(n))
