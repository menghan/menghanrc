alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias ll='ls -l'
if [[ `uname` =~ "Darwin" ]]; then
	alias ls='ls -G'
else
	alias ls='ls --color=auto'
fi
alias lt='ls -lt'
alias brup='brew update && brew outdated && brew upgrade && brew cleanup'
alias tcpmon='sudo tcpflow -X /dev/null -cp'
alias th='tmux attach -t '
alias tl='tmux ls'
alias godocserver='(godoc -http=:6066 &>/dev/null &)'
