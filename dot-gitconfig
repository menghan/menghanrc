[alias]
	co = checkout
	ci = commit -a -v
	cv = commit -v
	br = branch
	cl = clean -f -d
	ru = remote update
	rs = remote show origin
	recent = log --abbrev-commit --pretty=oneline -10
	last = log -p -1
	tco = diff --staged	# to commit
	to = diff --staged	# to commit
	prd = !git remote update upstream > /dev/null && git diff `git merge-base HEAD upstream/master` --find-copies-harder
	pa = push --all
	fh = log -p --graph --full-diff --find-copies-harder --
	sb = show-branch                       # from whyme
	gf = log --graph --oneline --decorate  # from whyme
	df = diff                              # from xieshi
	dif = diff
	up = "!git remote update -p; git merge --ff-only @{u}"  # from http://stackoverflow.com/questions/15316601/in-what-cases-could-git-pull-be-harmful

[color]
	status = auto
	branch = auto
	ui = auto
[core]
	pager = less -FRSX
[user]
	name = Menghan Zheng
	email = menghan412@gmail.com
[log]
	date = local
[blame]
	date = local

[credential]
	helper = osxkeychain
[svn]
	pushmergeinfo = true
[help]
	autocorrect = 1
[push]
	default = simple
